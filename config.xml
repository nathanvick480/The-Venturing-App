<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id = "com.vickmedia.venturingapp"
		versionCode=""
		version = "1.0.0">
		<name>Venturing</name>
		<description>Ever wanted to be able to easily view the Venturing award requirements on your phone without having to pull up your web browser?  The FIRST Venturing-specific app on the App Store makes that possible!</description>
		<author href="http://www.venturingapp.com" email="nathan@venturingapp.com">Nathan Vick</author>
		<plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
        <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
		<preference name="orientation" value="default" />
		<preference name="fullscreen" value="false" />
		<preference name="target-device" value="universal" />
		<preference name="webviewbounce" value="false" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="false" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="true" />
		<preference name="EnableViewportScale" value="false" />
		<preference name="MediaPlaybackRequiresUserAction" value="false" />
		<preference name="AllowInlineMediaPlayback" value="true" />
		<preference name="BackupWebStorage" value="none" />
		<preference name="TopActivityIndicator" value="white" />
		<preference name="KeyboardDisplayRequiresUserAction" value="true" />
		<preference name="KeyboardShrinksView " value="true" />
		<preference name="HideKeyboardFormAccessoryBar" value="true" />
		<preference name="SuppressesIncrementalRendering" value="false" />
		<preference name="ErrorUrl" value="null" />
		<preference name="BackgroundColor" value="0x000000" />
		<preference name="DisallowOverscroll" value="true" />
		<preference name="LoadingDialog" value="," />
		<preference name="LoadUrlTimeoutValue" value="null" />
        
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#006B3F" />
        <preference name="StatusBarStyle" value="lightcontent" />
        
        <preference name="FadeSplashScreen" value="false" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashScreenDelay" value="3.0" />
		
        <icon src="icon.png" />
        <splash src="splash.png" />
        
        <platform name="ios">
            <!-- iPhone 6 / 6+ -->
            <icon src="resources/icon-60@3x.png" platform="ios" width="180" height="180" />

            <!-- iPhone / iPod Touch  -->
            <icon src="resources/icon-60.png" platform="ios" width="60" height="60" />
            <icon src="resources/icon-60@2x.png" platform="ios" width="120" height="120" />

            <!-- iPad -->
            <icon src="resources/icon-76.png" platform="ios" width="76" height="76" />
            <icon src="resources/icon-76@2x.png" platform="ios" width="152" height="152" />

            <!-- Settings Icon -->
            <icon src="resources/icon-small.png" platform="ios" width="29" height="29" />
            <icon src="resources/icon-small@2x.png" platform="ios" width="58" height="58" />
            <icon src="resources/icon-small@3x.png" platform="ios" width="87" height="87" />

            <!-- Spotlight Icon -->
            <icon src="resources/icon-40.png" platform="ios" width="40" height="40" />
            <icon src="resources/icon-40@2x.png" platform="ios" width="80" height="80" />
            <icon src="resources/icon-40@3x.png" platform="ios" width="120" height="120" />
            
            <!-- Splash iPhone and iPod touch -->
            <splash src="resources/Default.png" platform="ios" width="320" height="480" />
            <splash src="resources/Default@2x.png" platform="ios" width="640" height="960" />

            <!-- Splash iPhone 5 / iPod Touch (5th Generation) -->
            <splash src="resources/Default-568h@2x.png" platform="ios" width="640" height="1136" />

            <!-- Splash iPhone 6 -->
            <splash src="resources/Default-667h@2x.png" platform="ios" width="750" height="1334" />
            <splash src="resources/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
            <splash src="resources/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />

            <!-- Splash iPad -->
            <splash src="resources/Default-Portrait.png" platform="ios" width="768" height="1024" />
            <splash src="resources/Default-Landscape.png" platform="ios" width="1024" height="768" />

            <!-- Splash Retina iPad -->
            <splash src="resources/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
            <splash src="resources/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
		</platform>
    </widget>